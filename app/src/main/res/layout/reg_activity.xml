<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="#ffffff">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:background="@drawable/back_233066"
            android:layout_marginLeft="10dp"
            android:padding="20dp"
            android:id="@+id/back"
            android:textSize="40sp"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"/>

        <TextView
            android:text="注册"
            android:padding="20dp"
            android:textSize="20dp"
            android:id="@+id/text"
            android:textColor="#233066"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"    />

        <View
            android:background="#233066"
            android:visibility="visible"
            android:layout_height="1dp"
            android:layout_below="@+id/text"
            android:layout_width="match_parent"></View>

    </RelativeLayout>



        <EditText
            android:id="@+id/emploee_id_re"
            android:layout_marginTop="20dp"
            android:hint="请输入工号"
            android:layout_gravity="center"
            android:layout_width="240dp"
            android:layout_height="40dp"
            android:background="@drawable/login_01"
            android:textSize="16dp"
            android:paddingLeft="20dp"
            android:singleLine="true"
       />


    <EditText
        android:id="@+id/username_re"
        android:singleLine="true"
        android:layout_marginTop="10dp"
        android:hint="请输入用户名/昵称"
        android:layout_gravity="center"
        android:layout_width="240dp"
        android:layout_height="40dp"
        android:background="@drawable/login_01"
        android:textSize="16dp"
        android:paddingLeft="20dp"/>

    <EditText
        android:id="@+id/mobile_re"
        android:singleLine="true"
        android:layout_marginTop="10dp"
        android:hint="请输入手机号"
        android:layout_gravity="center"
        android:layout_width="240dp"
        android:layout_height="40dp"
        android:background="@drawable/login_01"
        android:textSize="16dp"
        android:paddingLeft="20dp" />

    <EditText
        android:id="@+id/email_re"
        android:singleLine="true"
        android:layout_marginTop="10dp"
        android:hint="请输入email"
        android:layout_gravity="center"
        android:layout_width="240dp"
        android:layout_height="40dp"
        android:background="@drawable/login_01"
        android:textSize="16dp"
        android:paddingLeft="20dp"  />


        <EditText
            android:id="@+id/password_re"
            android:singleLine="true"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:layout_width="240dp"
            android:layout_height="40dp"
            android:background="@drawable/login_01"
            android:textSize="16dp"
            android:paddingLeft="20dp"
            android:hint="请输入密码"
            android:inputType="textPassword" />



        <EditText
            android:id="@+id/password_confirm_re"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_width="240dp"
            android:layout_height="40dp"
            android:background="@drawable/login_01"
            android:textSize="16dp"
            android:paddingLeft="20dp"
            android:singleLine="true"
            android:hint="请确认密码"
            android:inputType="textPassword" />



    <Button
        android:text="立即注册"

        android:id="@+id/regNow"
        android:layout_marginTop="30dp"
        android:layout_width="240dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:textColor="#ffffff"
        android:gravity="center"
        android:background="@drawable/login_bt"
      />

</LinearLayout>
